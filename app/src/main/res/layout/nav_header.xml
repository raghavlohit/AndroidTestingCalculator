<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_header_height"
    android:background="@drawable/nav_header_background"
    android:paddingLeft="@dimen/default_padding"
    android:paddingRight="@dimen/default_padding"
    app:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:paddingBottom="@dimen/navigation_padding_bottom">

    <ImageView
        android:id="@+id/nav_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/xurxodev_image"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:gravity="center|left">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xurxodev"
            android:textColor="?android:textColorPrimary"

            android:layout_marginLeft="10dp"
            android:focusableInTouchMode="false"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:fontFamily="@string/font_fontFamily_medium" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="plus.google.com/+JorgeSanchez-Xurxo"
            android:textColor="?android:textColorPrimary"
            android:layout_marginLeft="10dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:fontFamily="@string/font_fontFamily_regular" />
    </LinearLayout>


</RelativeLayout>